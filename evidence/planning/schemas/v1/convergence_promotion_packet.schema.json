{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ree://planning/v1/convergence_promotion_packet.schema.json",
  "title": "REE Convergence Promotion Packet v1",
  "type": "object",
  "required": [
    "schema_version",
    "packet_id",
    "created_at_utc",
    "source",
    "status",
    "evidence_summary",
    "ree_touchpoints",
    "promotion_gates",
    "deltas"
  ],
  "properties": {
    "schema_version": {
      "const": "convergence_promotion_packet/v1"
    },
    "packet_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "object",
      "required": [
        "repo_name",
        "source_system_id",
        "snapshot_ref"
      ],
      "properties": {
        "repo_name": {
          "type": "string",
          "minLength": 1
        },
        "source_system_id": {
          "type": "string",
          "minLength": 1
        },
        "snapshot_ref": {
          "type": "string",
          "minLength": 1
        },
        "intake_path": {
          "type": "string"
        },
        "primary_links": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": [
        "proposed",
        "under_review",
        "accepted",
        "rejected",
        "deferred"
      ]
    },
    "evidence_summary": {
      "type": "object",
      "required": [
        "evidence_status",
        "primary_sources_verified",
        "notes"
      ],
      "properties": {
        "evidence_status": {
          "type": "string",
          "enum": [
            "needs_primary_sources",
            "partial",
            "sufficient"
          ]
        },
        "primary_sources_verified": {
          "type": "boolean"
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "ree_touchpoints": {
      "type": "object",
      "required": [
        "claim_ids",
        "docs_paths",
        "impact_areas"
      ],
      "properties": {
        "claim_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "docs_paths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "impact_areas": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "representation",
              "transition",
              "memory",
              "commitment",
              "control_plane",
              "tooling",
              "docs",
              "governance",
              "other"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "promotion_gates": {
      "type": "object",
      "required": [
        "separation_tests_defined",
        "falsifiability_defined",
        "rollback_plan_defined",
        "owner"
      ],
      "properties": {
        "separation_tests_defined": {
          "type": "boolean"
        },
        "falsifiability_defined": {
          "type": "boolean"
        },
        "rollback_plan_defined": {
          "type": "boolean"
        },
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "decision_due_utc": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "deltas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "delta_id",
          "title",
          "proposal",
          "rationale",
          "target_scope",
          "breaking_change",
          "evidence_links"
        ],
        "properties": {
          "delta_id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "proposal": {
            "type": "string",
            "minLength": 1
          },
          "rationale": {
            "type": "string",
            "minLength": 1
          },
          "target_scope": {
            "type": "string",
            "enum": [
              "representation",
              "transition",
              "memory",
              "commitment",
              "control_plane",
              "tooling",
              "docs",
              "governance",
              "other"
            ]
          },
          "breaking_change": {
            "type": "boolean"
          },
          "evidence_links": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "format": "uri"
            }
          },
          "risk_flags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "decisions": {
      "type": "object",
      "properties": {
        "recommended_outcome": {
          "type": "string",
          "enum": [
            "retain_ree",
            "hybridize",
            "adopt_jepa_structure",
            "retire_ree_claim",
            "defer"
          ]
        },
        "anti_lock_in_review_required": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
